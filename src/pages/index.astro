---
import Layout from "@layouts/Layout.astro";
import BaseHead from "@components/head/BaseHead.astro";
import PreloadHead from "@components/head/PreloadHead.astro";
import ImportHead from "@components/head/ImportHead.astro";
import MainHead from "@components/head/MainHead.astro";
import Body from "@components/Body.astro";
import Footer from "@components/Footer.astro";
import ImageSlider from "@components/ImageSlider.tsx";
import Sponsor from "@components/Sponsor.astro";
import "highlight.js/styles/atom-one-dark.css";
import badlandsImg from "@img/cp_badlands01.webp";
import sunshineImg from "@img/cp_sunshine04.webp";
import badwaterImg from "@img/pl_badwater01.webp";
import veryLowImg from "@img/presets/very-low.webp";
import ultraImg from "@img/presets/ultra.webp";
import veryLowHqImg from "@img/presets/very-low-hq.webp";
import ultraHqImg from "@img/presets/ultra-hq.webp";
import networkImg from "@img/network.webp";
import HomePageLoader from "@components/loaders/HomePageLoader.astro";
---

<Layout>
  <head>
    <BaseHead />
    <PreloadHead />
    <ImportHead>
      <script>
        import "bootstrap/js/src/modal.js";
      </script>
    </ImportHead>
    <MainHead
      title="mastercomfig - a modern customization framework for TF2"
      noSite={true}
      description="A modern Team Fortress 2 performance and customization config. mastercomfig is the most popular config, with millions of downloads, and has been highly tuned and researched for the best performance. Instantly tune your graphics and gameplay with the easy-to-use app."
    />
  </head>
  <Body>
    <HomePageLoader />
    <header
      class="jumbotron jumbotron-fluid"
      style=`background: linear-gradient(rgba(38, 50, 56, 0.7) 10%, rgba(38, 50, 56, 0.7)), url(${badlandsImg.src}); background-size: cover; background-position: center`
    >
      <div
        class="container d-flex align-items-center justify-content-center"
        style="min-height: 100vh"
      >
        <div class="align-middle">
          <div id="action-container" class="text-center">
            <img
              class="img-logo"
              src="/img/mastercomfig_logo_transparent_i.svg"
              alt="logo"
            />
            <h1 class="display-1" style="font-weight: 600">mastercomfig</h1>
            <p
              class="lead display-6"
              style="letter-spacing: 0.25rem;font-weight: 100"
            >
              a modern customization framework
            </p>
            <a class="btn btn-outline-secondary btn-lg" href="/app/">
              <span class="far fa-window-maximize fa-fw"></span> App
            </a>
            <a class="btn btn-outline-secondary btn-lg" href="/huds/1">
              <span class="fas fa-display fa-fw"></span> HUDs
            </a>
            <a class="btn btn-outline-secondary btn-lg" href="/hits/hs/1">
              <span class="fas fa-volume-high fa-fw"></span> Hits
            </a>
            <a class="btn btn-outline-secondary btn-lg" href="/quickplay">
              <span class="far fa-compass fa-fw"></span> Quickplay
            </a>
            <br /><br />
            <p class="lead fw-light">
              <a href="https://docs.comfig.app/" rel="noopener"
                >Docs <span class="fas fa-book"></span></a
              > &bull;
              <a href="/discord" rel="noopener"
                >Discord <span class="fab fa-discord"></span></a
              > &bull;
              <a
                href="https://docs.comfig.app/latest/support_me/"
                rel="noopener">Support Me <span class="fas fa-heart"></span></a
              >
            </p>
            <a href="https://teamcomtress.com">
              <div
                class="btn btn-lg btn-secondary text-start pt-4"
                style={{
                  maxWidth: "min(100vw, 700px)",
                  opacity: "0.77",
                }}
              >
                <div class="row">
                  <div class="col-8">
                    <h4 class="fw-bolder">
                      <img
                        src="/img/tc2/favicon.ico"
                        alt=""
                        class="d-inline"
                        style="width: 16px; height: 16px;vertical-align: baseline"
                      />
                      Team Comtress 2
                    </h4>
                    <p class="lead">
                      A new TF2 mod by mastercomfig, constantly updated with
                      everything you could ask for: performance optimizations,
                      quality of life, bug fixes, and more!
                    </p>
                  </div>
                  <div
                    class="col-4 text-center d-flex align-items-center justify-content-center"
                  >
                    <div>
                      <span class="fas fa-arrow-right"></span>
                      <p>Download now</p>
                    </div>
                  </div>
                </div>
              </div>
            </a>
            <br /><br />
          </div>
          <br />
          <Sponsor />
          <br />
          <br />
        </div>
      </div>
    </header>

    <section>
      <div class="container" style="height: 100%">
        <div
          class="row d-flex align-items-center justify-content-center"
          style="height: 100%"
        >
          <div class="col-md align-middle">
            <div class="progress fps-bar">
              <div
                id="mastercomfig-bar"
                class="progress-bar"
                role="progressbar"
                style="width: 25%"
                aria-valuenow={100}
                aria-valuemin={0}
                aria-valuemax={100}
              >
                <b style="font-weight: 900">322FPS</b>
              </div>
            </div>
            <p>mastercomfig low</p>
            <div class="progress fps-bar">
              <div
                id="comanglia-bar"
                class="progress-bar"
                role="progressbar"
                style="width: 25%"
                aria-valuenow={91}
                aria-valuemin={0}
                aria-valuemax={100}
              >
                <b style="font-weight: 800">291FPS</b>
              </div>
            </div>
            <p>Comanglia's config</p>
            <div class="progress fps-bar">
              <div
                id="m0re-bar"
                class="progress-bar"
                role="progressbar"
                style="width: 25%"
                aria-valuenow={90}
                aria-valuemin={0}
                aria-valuemax={100}
              >
                <b style="font-weight: 800">290FPS</b>
              </div>
            </div>
            <p>m0re highfps</p>
            <div class="progress fps-bar">
              <div
                id="chris-bar"
                class="progress-bar"
                role="progressbar"
                style="width: 25%"
                aria-valuenow={84}
                aria-valuemin={0}
                aria-valuemax={100}
              >
                <b style="font-weight: 800">270FPS</b>
              </div>
            </div>
            <p>Chris maxframes</p>
            <div class="progress fps-bar">
              <div
                id="rhapsody-bar"
                class="progress-bar"
                role="progressbar"
                style="width: 25%"
                aria-valuenow={80}
                aria-valuemin={0}
                aria-valuemax={100}
              >
                <b style="font-weight: 800">257FPS</b>
              </div>
            </div>
            <p>Rhapsody's config</p>
            <hr class="bg-light" style="margin-bottom: 0.5rem" />
            <p class="font-weight-light" style="font-size: 1rem">
              FPS = frames per second (higher is better).
              <br /><small
                >Measured on i7-8700K, GTX1080, 16GB 3200MHz RAM, SSD, Linux
                using <a
                  href="https://docs.comfig.app/latest/benchmarks/"
                  rel="noopener">this benchmark</a
                >.</small
              >
            </p>
          </div>
          <div class="col-md align-middle">
            <h1 class="display-5 fw-bolder">
              <span class="fas fa-bolt fa-fw"></span> Performance
            </h1>
            <p class="lead">
              Get faster load times and a buttery smooth game at high frames
              with mastercomfig.
            </p>
          </div>
        </div>
      </div>
    </section>

    <div
      class="img-separator"
      style=`background: linear-gradient(rgba(38, 50, 56, 0.7) 10%, rgba(38, 50, 56, 0.7)), url(${sunshineImg.src}); background-size: cover; background-position: center; background-attachment: fixed; margin-bottom: 0`
    >
    </div>

    <section style="padding-top: 0; padding-bottom: 0">
      <div
        style=`background-image: url(${networkImg.src}); background-size: cover; height: 100%`
      >
        <div
          class="container"
          style="height: 100%; padding-top: 4rem; padding-bottom: 4rem"
        >
          <div
            class="row d-flex align-items-center justify-content-center"
            style="height: 100%"
          >
            <div class="col-md-6 align-middle">
              <h1 class="display-5 fw-bolder">
                <span class="fas fa-crosshairs fa-fw"></span> Hitreg
              </h1>
              <p class="lead">
                With mastercomfig's optimized networking settings that minimize
                choke, loss and lag, you'll find yourself fragging more and
                hitting less 0 damage headshots and failstabs.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div
      class="img-separator"
      style=`background: linear-gradient(rgba(38, 50, 56, 0.7) 10%, rgba(38, 50, 56, 0.7)), url(${badwaterImg.src}); background-size: cover; background-position: center; background-attachment: fixed`
    >
    </div>

    <section class="text-light">
      <div class="container" style="height: 100%">
        <div
          class="row d-flex align-items-center justify-content-center"
          style="height: 100%"
        >
          <div class="col-md align-middle">
            <ImageSlider
              client:load
              srcOne={veryLowImg.src}
              altOne="koth_sawmill low"
              srcTwo={ultraImg.src}
              altTwo="koth_sawmill ultra"
            />
            <br />
            <button
              type="button"
              class="btn btn-secondary d-none d-md-block"
              data-bs-toggle="modal"
              data-bs-target="#compareModal"
            >
              View larger
            </button>
            <br />
          </div>
          <div class="col-md align-middle">
            <h1 class="display-5 fw-bolder">
              <span class="fas fa-eye fa-fw"></span> Quality
            </h1>
            <p class="lead">
              Only the most unoptimized settings have been disabled by default
              in mastercomfig, so you don't have to sacrifice everything for
              performance. Looking for more performance, or quality? Easily
              customize looks to your exact preference using the many config
              customization presets.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="container">
      <hr class="bg-light" />
    </section>

    <section class="text-light">
      <div class="container" style="height: 100%">
        <div
          class="row d-flex align-items-center justify-content-center"
          style="height: 100%"
        >
          <div class="col-lg-6 align-middle">
            <h1 class="display-5 fw-bolder">
              <span class="fas fa-sliders fa-fw"></span> Customization
            </h1>
            <p class="lead">
              Easily customize the config to your needs with quality presets and
              the intuitive mastercomfig <a
                href="https://docs.comfig.app/latest/customization/modules/"
                rel="noopener">modules system</a
              >.<br />
              Need more precision? Fine tune your game settings using mastercomfig's
              extensively documented user config template and <a
                href="https://docs.comfig.app/latest/customization/custom_configs/"
                rel="noopener">custom config system</a
              >.
            </p>
            <p>
              These customization features are available in the app, or to
              customize locally in a text file, so you get to customize your
              way.
            </p>
          </div>
          <div class="col-lg-6 align-middle">
            <pre><code class="cpp">
lod=high
lighting=very_high
shadows=medium

// =============
// '--- HUD ---'
// =============
// ---------------
// '-- General --'
// ---------------
// General/misc HUD settings

//cl_hud_playerclass_use_playermodel 1 // Enable live player model in HUD
//cl_hud_playerclass_use_playermodel 0 // Disable live player model in HUD
//cl_hud_minmode 1 // HUD min mode

tf_dashboard_slide_time .1 // Time in seconds for dashboard transitions
tf_item_inspect_model_auto_spin 1 // Auto spin items in the inspect view
//tf_item_inspect_model_auto_spin 0 // Do not auto spin items in the inspect view
tf_item_inspect_model_spin_rate 30 // Rate at which items spin in the inspect view
//tf_quest_map_tuner_wobble_magnitude .01 // Enable red tuner at the bottom
//tf_quest_map_tuner_wobble_magnitude 0 // Disable the red tuner on the contracker
//tf_build_menu_controller_mode 1 // Use controller style engineer build menu
//tf_disguise_menu_controller_mode 1 // Controller disguise menu
//tf_simple_disguise_menu 0 // Concise disguise menu
                </code></pre>
          </div>
        </div>
      </div>
    </section>
    <section class="container">
      <hr class="bg-light" />
    </section>
    <section class="container text-center text-light">
      <div class="jumbotron">
        <h1 class="display-4 fw-light">
          Get <strong class="fw-semibold">frames</strong>. Get <strong
            class="fw-semibold">master&shy;comfig</strong
          >.
        </h1>
        <br />
        <a class="btn btn-primary btn-lg" href="/app/">
          <span class="fas fa-window-maximize fa-fw"></span> Launch mastercomfig
        </a>
        <br /><br />
        <a href="https://docs.comfig.app/" class="lead" rel="noopener"
          ><span class="fas fa-book fa-fw"></span> Learn more at our docs</a
        >
      </div>
    </section>
    <section class="container">
      <hr class="bg-light" />
    </section>
    <Footer>
      <a href="https://github.com/mastercomfig/mastercomfig" rel="noopener"
        ><span class="fab fa-github fa-fw"></span> Source code</a
      >
      <br /><br />
    </Footer>

    <div
      class="modal fade"
      id="compareModal"
      tabindex={-1}
      role="dialog"
      aria-labelledby="compareModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header text-light">
            <h5 class="modal-title" id="compareModalLabel">Comparison</h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <ImageSlider
              client:load
              srcOne={veryLowHqImg.src}
              altOne="koth_sawmill low"
              srcTwo={ultraHqImg.src}
              altTwo="koth_sawmill ultra"
            />
          </div>
        </div>
      </div>
    </div>
  </Body>
</Layout>
